<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="BaseHeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemsTitle" parent="BaseHeaderTextStyle"></style>

    <style name="ListItemsShortDescription" parent="BaseTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailOfListItemTitle" parent="BaseHeaderTextStyle">
    </style>

    <style name="DetailOfListItemDescription" parent="BaseTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.Artic.AmberOrange">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--Background Color-->
        <item name="android:background">@color/darkBrown</item>
        <!--Buttons Colors-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--Title and Messages Color-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="MetadataMediumGray">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/warmGrey</item>
        <item name="android:fontFeatureSettings">tnum</item>
    </style>
</resources>